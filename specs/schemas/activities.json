{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Activités",
  "description": "Les projets menés au médialab",
  "type": "object",
  "properties": {
    "name": {
      "title": "Nom du projet",
      "description": "Nom d'origine pas de traduction",
      "type": "string"
    },
    "excerpt_en": {
      "title": "",
      "description": "Name in anglais",
      "type": "string"
    },
    "excerpt_fr": {
      "title": "Biography",
      "description": "Biography in english",
      "type": "string",
      "formType": "content"
    },
    "type": {
      "title": "Type d'activité",
      "description": "",
      "type": "string",
      "enum": [
        "Recherche",
        "Enseignement",
        "Méthode"
      ]
    },
    "illustrations": {
      "title": "Illustration",
      "type":"array",
      "description":"image et/ou vidéo utilisées pour illustré l'activité",
      "#ref": "media"
    },
    "documentation": {
      "title": "Documents associés",
      "type":"array",
      "description":"liste de documents liés à l'activité",    
      "#ref": "media"
    },
    "description_en": {
      "title": "Biography",
      "description": "Biography in english",
      "type": "string",
      "formType": "content"
    },
    "description_fr": {
      "title": "Biographie",
      "description": "Biographie en français",
      "type": "string",
      "formType": "content"
    },
    "people": {
      "title": "Participant.es",
      "description": "Personnes ayant participées",
      "type": "array",
      "#ref": "people"
    },
    "startDate": {
      "title": "Date de début",
      "description": "quand l'activité a commencé",
      "type": "string",
      "formType": "date",
      "format": "date"
    },
    "endDate": {
      "title": "Date de fin",
      "description": "quand l'activité s'est arrêtée",
      "type": "string",
      "formType": "date",
      "format": "date"
    },
    "active": {
      "title": "Actif ?",
      "description": "",
      "type": "boolean"
    },
     "public": {
      "title": "Publié ?",
      "description": "",
      "type": "boolean"
    }
  },
  "required": [
    "name"
  ]
}
