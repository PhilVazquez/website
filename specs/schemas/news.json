{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Actualités",
  "description": "Les actualités du médialab",
  "type": "object",
  "properties": {
    "title_fr": {
      "title": "Titre",
      "description": "en français",
      "type": "string"
    },
    "title_en": {
      "title": "Title",
      "description": "en anglais",
      "type": "string"
    },
    "excerpt_en": {
      "title": "Excerpt",
      "description": "In english",
      "type": "string"
    },
    "excerpt_fr": {
      "title": "Extrait",
      "description": "En français",
      "type": "string"
    },
    "label": {
      "title": "Label",
      "description": "courte expression typant l'actualité",
      "type": "string"
    },
   "place": {
      "title": "Lieux",
      "description": "lieux de l'événement",
      "type": "string"
    },
    "illustrations": {
      "title": "Illustration",
      "type":"array",
      "description":"image et/ou vidéo utilisées pour illustré la publication",
      "#ref": "media"
    },
    "documentation": {
      "title": "Documents associés",
      "type":"array",
      "description":"liste de documents liés à la publication",    
      "#ref": "media"
    },
    "content_en": {
      "title": "Content",
      "description": "in english",
      "type": "string",
      "formType": "content"
    },
    "content_fr": {
      "title": "Contenu",
      "description": "en français",
      "type": "string",
      "formType": "content"
    },
    "people": {
      "title": "Personnes liées",
      "description": "",
      "type": "array",
      "#ref": "people"
    },
    "activities": {
      "title": "Activités liées",
      "description": "",
      "type": "array",
      "#ref": "activities"
    },
    "productions": {
      "title": "Productions liées",
      "description": "",
      "type": "array",
      "#ref": "productions"
    },
    "startDate": {
      "title": "Date de début",
      "description": "de l'événement",
      "type": "string",
      "formType": "date",
      "format": "date"
    },
   "endDate": {
      "title": "Date de fin",
      "description": "de l'événement",
      "type": "string",
      "formType": "date",
      "format": "date"
    },
    "public": {
      "title": "Publié ?",
      "description": "",
      "type": "boolean"
    }
  },
  "required": [
    "title_fr"
  ]
}