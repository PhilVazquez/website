{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Productions",
  "description": "Les productions du médialab",
  "type": "object",
  "properties": {
    "title_fr": {
      "title": "Titre",
      "description": "Titre de la publication",
      "type": "string"
    },
    "title_en": {
      "title": "Title",
      "description": "Publication's title",
      "type": "string"
    },
    "abstract_en": {
      "title": "Abstract",
      "description": "In english",
      "type": "string"
    },
    "abstract_fr": {
      "title": "Résumé",
      "description": "En français",
      "type": "string"
    },
    "type": {
      "title": "Type de production",
      "description": "",
      "type": "string",
      "enum": [
        "article",
        "livre",
        "logiciel",
        "conférence",
        "logiciel",
        "site web",
        "working paper"
      ]
    },
    "bibtex": {
      "title": "bibtex",
      "description": "métadonnées de la publication, récupérée de SPIRE et utilsiée pour générer la citation complète",
      "type": "string"
    },
    "illustrations": {
      "title": "Illustration",
      "type":"array",
      "description":"image et/ou vidéo utilisées pour illustré la publication",
      "#ref": "media"
    },
    "documentation": {
      "title": "Documents associés",
      "type":"array",
      "description":"liste de documents liés à la publication",    
      "#ref": "media"
    },
    "content_en": {
      "title": "Content",
      "description": "in english",
      "type": "string",
      "formType": "content"
    },
    "content_fr": {
      "title": "Contenu",
      "description": "en français",
      "type": "string",
      "formType": "content"
    },
    "people": {
      "title": "Auteurs au médialab",
      "description": "Membres du médialab auteurs de cette publication",
      "type": "array",
      "#ref": "people"
    },
    "activities": {
      "title": "Activités liées",
      "description": "Dans quel cadre cette publication at'elle été produite ?",
      "type": "array",
      "#ref": "activities"
    },
    "productions": {
      "title": "Productions liées",
      "description": "Autres productions liées (attention lien asymétrique)",
      "type": "array",
      "#ref": "productions"
    },
    "date": {
      "title": "Date",
      "description": "de la publication",
      "type": "string",
      "formType": "date",
      "format": "date"
    },
    "public": {
      "title": "Publié ?",
      "description": "",
      "type": "boolean"
    }
  },
  "required": [
    "title_fr"
  ]
}